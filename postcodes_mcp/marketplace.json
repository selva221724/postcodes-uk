{
    "name": "Postcodes UK MCP Server",
    "version": "0.1.0",
    "description": "An MCP server for UK postcode lookups using postcodes.io API",
    "author": "Cline AI",
    "license": "MIT",
    "keywords": ["postcodes", "uk", "geolocation", "mcp"],
    "homepage": "https://github.com/cline-ai/postcodes-mcp",
    "tools": [
        {
            "name": "get_postcode_details",
            "description": "Retrieve detailed information for a UK postcode",
            "parameters": {
                "postcode": {
                    "type": "string",
                    "description": "UK postcode to look up"
                }
            }
        },
        {
            "name": "bulk_postcode_lookup",
            "description": "Perform bulk lookup of multiple UK postcodes",
            "parameters": {
                "postcodes": {
                    "type": "array",
                    "description": "List of UK postcodes to look up"
                }
            }
        },
        {
            "name": "nearest_postcodes",
            "description": "Find nearest postcodes by geographic coordinates",
            "parameters": {
                "latitude": {
                    "type": "number",
                    "description": "Latitude coordinate"
                },
                "longitude": {
                    "type": "number", 
                    "description": "Longitude coordinate"
                }
            }
        }
    ],
    "dependencies": [
        "httpx",
        "fastmcp",
        "mcp-sdk"
    ],
    "runtime": {
        "python": ">=3.10"
    },
    "category": "Geolocation",
    "tags": ["geocoding", "uk", "address"]
}
